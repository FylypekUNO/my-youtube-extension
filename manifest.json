{
  "manifest_version": 3,
  "name": "My YouTube Extension",
  "version": "1.0",
  "description": "A Chrome extension for YouTube.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/",
        "*://www.youtube.com/watch",
        "*://www.youtube.com/shorts/*"
      ],
      "css": ["content_scripts/youtube.css"]
    }
  ]
}
