{
  "manifest_version": 3,
  "name": "My YouTube Extension",
  "version": "1.0",
  "description": "A Chrome extension for YouTube.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content_scripts/youtube/youtube_any.js"],
      "css": ["content_scripts/youtube/youtube_any.css"]
    },
    {
      "matches": ["*://www.youtube.com/"],
      "js": ["content_scripts/youtube/youtube_main.js"],
      "css": ["content_scripts/youtube/youtube_main.css"]
    }
  ]
}
